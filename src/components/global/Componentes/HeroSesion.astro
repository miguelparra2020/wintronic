  MessageCircle,
  ArrowRight,
  Cpu,
  Timer,
  Boxes,
  BadgeCheck,
} from "lucide-react"

import Stat from "@component/global/Componentes/Stat.astro"
---

<section class="hero-root relative flex flex-col text-white overflow-hidden">

  <!-- HERO -->
