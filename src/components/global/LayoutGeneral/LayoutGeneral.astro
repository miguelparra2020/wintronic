---
import Layout from "../Layout/Layout.astro";
import { Header } from "../Header";
import { Footer } from "../Footer";
const pathTitle = "Mile puntadas"
---

<Layout title={pathTitle}>
  <div class="header-overlay">
    <Header />
  </div>
  <div class="content">
    <slot />
  </div>
  <div class="footer-overlay">
    <Footer />
  </div>
</Layout>
<style>
  .header-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 2000; /* Encima del contenido */
    background: rgba(
      255,
      255,
      255,
      0.8
    ); /* Fondo blanco semi-transparente (opcional) */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Sombra para visibilidad */
  }

  /* Estilo para el footer */
  .footer-overlay {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 2000; /* Encima del contenido */
    background: rgba(
      255,
      255,
      255,
      0.8
    ); /* Fondo blanco semi-transparente (opcional) */
    box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1); /* Sombra para visibilidad */
  }

  /* Estilo para el contenido */
  .content {
    position: relative;
    z-index: 0; /* Por debajo del header y footer */
    margin-top: 90px; /* Asegúrate de que el contenido no quede oculto bajo el header */
    margin-bottom: 60px; /* Asegúrate de que el contenido no quede oculto bajo el footer */
  }

  :root {
      --color-slate-950: #020617;
      --color-slate-900: #0f172a;
      --color-slate-800: #1e293b;
      --color-slate-700: #334155;
      --color-slate-600: #475569;
      --color-slate-500: #64748b;
      --color-slate-400: #94a3b8;
      --color-stone-50: #fafaf9;
      --color-blue-600: #2563eb;
      --color-blue-700: #1d4ed8;
    }

    * {
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      background-color: #fafaf9;
      color: #0f172a;
    }

    img {
      max-width: 100%;
      height: auto;
      display: block;
    }

    .fade-in {
      animation: fadeIn 0.6s ease-in;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(8px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
</style>
